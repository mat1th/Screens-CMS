 {{> nav}}
<section class="content scrollable">
    <section class="content-header">
        <h1>Slideshows</h1>
        <section class="toolbar">
            <div class="icons">
                <a href="/admin/slideshows/add" title="add" class="btn-action ">
                    <svg height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                        <path d="M0 0h24v24H0z" fill="none" />
                    </svg>
                </a>
                <button type="button" name="button" title="delete" class="btn-action" disabled>
                    <svg height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" />
                        <path d="M0 0h24v24H0z" fill="none" />
                    </svg>
                </button>
            </div>

            <form class="" action="index.html" method="post">
                <button type="button" name="name" class="btn btn-filter">Name</button>
                <button type="button" name="name" class="btn btn-filter">Date</button>
            </form>
        </section>
    </section>
    <section class="content-body">
        {{#if error}}
            <div class="error">
                {{error}}
            </div>
        {{else}}
            {{#if data.general}}
                <ul>
                    {{#each data.general.slideshows}}
                        <li class="screen">
                            <a href="/admin/slideshows/add/{{id}}">
                                <div class="image no-overflow">
                                    <iframe src="/admin/slideshows/preview/{{id}}" width="100%" height="100%"></iframe>
                                </div>
                                <div class="play-icon-bottom">
                                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 36.2 36.2">
                                        <circle style="fill: rgba(255, 255, 255, 0.80)" cx="18.1" cy="18.1" r="18.1" />
                                        <path d="M16,14.1v8l5-4L16,14.1z M25,9.1H11c-1.1,0-2,0.9-2,2v14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2v-14C27,10,26.1,9.1,25,9.1z
                                    	 M25,25.1H11v-14h14V25.1z" />
                                    </svg>
                                </div>
                                <div class="name">
                                    <h2>{{slideshow_name}}</h2>
                                </div>
                            </a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <section>
                    <p>You have got no screens please add one.</p>
                    <a href="/admin/screens/add" class="btn btn-default">New screen</a>
                </section>
            {{/if}}
        {{/if}}
    </section>

    {{#if rights.admin}}

        <section class="content-header">
            <h1>Displays</h1>
            <section class="toolbar">
                <div class="icons">
                    <a href="/admin/displays/add" title="add" class="btn-action ">
                        <svg height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                            <path d="M0 0h24v24H0z" fill="none" />
                        </svg>
                    </a>
                    <button type="button" name="button" title="delete" class="btn-action ">
                        <svg height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" />
                            <path d="M0 0h24v24H0z" fill="none" />
                        </svg>
                    </button>
                </div>

                <form class="" action="index.html" method="post">
                    <button type="button" name="name" class="btn btn-filter">Name</button>
                    <button type="button" name="name" class="btn btn-filter">Date</button>
                </form>
            </section>
        </section>
        <section class="content-body">

            {{#if error}}
                <div class="error">
                    {{error}}
                </div>
            {{else}}
                <table class="responsvive">
                    <tr>
                        <th scope="col">Select</th>
                        <th scope="col">Name</th>
                        <th scope="col">Slideshow</th>
                        <th scope="col">Location</th>
                    </tr>
                    {{#each data.general.displays}}
                        <tr>
                            <td class="checkboxes">
                                <input type="checkbox" id="field_name_{{display_id}}" name="displays[]" value="{{display_id}}">
                                <label for="field_name_{{display_id}}"></label>
                            </td>
                            <td data-th="Name">
                                <a href="/display/{{display_id}}">{{name}}</a>
                            </td>

                            <td data-th="Slideshows">
                                <a href="/display/{{display_id}}">
                                  {{#if slideshow_name}}
                                    {{slideshow_name}}
                                  {{else}}
                                    No name
                                  {{/if}}
                                </a>

                            </td>
                            <td data-th="location">
                                <a href="/display/{{display_id}}">{{location}}</a>
                            </td>
                        </tr>
                    {{/each}}

                </table>
            {{/if}}

        </section>
    {{/if}}



</section>
