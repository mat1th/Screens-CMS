{{> nav}}
<section class="main-content scrollable">
    <section class="content-header">
        <h1>Dashboard</h1>
    </section>
    <article class="card">
        <section class="card-header">
            <h2>Content</h2>
        </section>
        <section class="card-body">
            <p>You have <strong>{{data.general.content}}</strong> poster(s) or vimeo video(s).
                {{#if rights.admin}}
                    Form these poster(s) or vimeo video(s) are <strong>{{data.general.uncheckedContent}}</strong> uncheked.
                {{/if}}
                For more information go to display page.</p>
        </section>
        <a href="/admin/content" class="btn btn-default">Show conent</a>
        <a href="/admin/content/add" class="btn btn-default">Ad new content</a>
    </article>

    {{#if rights.admin}}
        <article class="card">
            <section class="card-header">
                <h2>Slideshows</h2>
            </section>
            <section class="card-body">
                <p>You have got <strong>{{data.general.slideshows}}</strong> slideshows. For more details go to the slideshow page. </p>
            </section>
            <a href="/admin/slideshows" class="btn btn-default">Show slideshow</a>
        </article>

        <article class="card">
            <section class="card-header">
                <h2>Displays</h2>
            </section>
            <section class="card-body">
                <p>There are <span class="bold">{{data.general.displays}}</span> displays. For more information go to display page.</p>
            </section>
            <a href="/admin/displays" class="btn btn-default">Show displays</a>
        </article>
    {{/if}}

</section>
