{{> nav}}
<section class="content scrollable">
    <section class="content-header">
        <h1>Dashboard</h1>
    </section>
    <article class="card">
        <section class="card-header">
            <h2>Posters</h2>
        </section>
        <section class="card-body">
            <p>You have {{data.general.posters}} poster(s). For more information go to display page.</p>
        </section>
        <a href="/admin/posters" class="btn btn-default">Go</a>
    </article>
    {{#if rights.admin}}
    <article class="card">
        <section class="card-header">
            <h2>Slideshows</h2>
        </section>
        <section class="card-body">
            <p>You have got {{data.general.slideshows}} slideshows. For more details go to the slideshow page. </p>
        </section>
        <a href="/admin/slideshows" class="btn btn-default">Go</a>
    </article>
    <article class="card">
        <section class="card-header">
            <h2>Displays</h2>
        </section>
        <section class="card-body">
            <p>There are {{data.general.displays}} displays. For more information go to display page.</p>
        </section>
        <a href="/admin/displays" class="btn btn-default">Go</a>
    </article>
    {{/if}}
</section>
