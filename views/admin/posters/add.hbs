 {{> nav}}
<section class="content scrollable">
    <section class="content-header">
        <h1>Add a poster</h1>
    </section>
    <section class="content-body">
        {{#if error}}
            <div class="error">
                {{error}}
            </div>
        {{/if}}
        <!-- <div id="messages">
        <p>Status Messages</p>
      </div> -->
        <!-- <div id="filedrag">or drop files here</div> -->
        <form action="{{postUrl}}" method="post" enctype="multipart/form-data">
            <div class="">
                <label for="field_name">Name: </label>
                <input type="text" id="field_name" name="name" value="">
            </div>
            <div class="">
                <label for="field_discription">Discription: </label>
                <textarea name="discription" rows="2" cols="40" value="" id="field_discription"></textarea>
            </div>
            <div class="file_input">
                <span class="filename">Select your file</span>
                <label for="field_file" class="btn btn-default ">Browse
                    <input type="file" name="imageFile" for="hio" value="" id="field_file">
                </label>
            </div>
            <div class="">
                <label for="field_duration">Type: </label>
                <div class="select-icon">
                    <select class="" name="type">
                        <option value="poster">Pooster</option>
                        <option value="video">Vimeo video</option>
                        <!-- <option value="Poll">Poll</option> -->
                    </select>
                </div>
            </div>

            <div class="">
                <label for="field_animation">Animation: </label>
                <div class="select-icon">
                    <select class="" name="animation">
                        <option value="pop">pop</option>
                        <option value="top-push">push from top</option>
                        <option value="left-push">push from left</option>
                    </select>
                </div>
            </div>

            <div class="">
                <label for="field_duration">Duration: </label>
                <div class="select-icon">
                    <select class="" name="duration">
                        <option value="10">10 sec</option>
                        <option value="20">20 sec</option>
                        <option value="30">30 sec</option>
                        <option value="40">40 sec</option>
                        <option value="50">50 sec</option>
                        <option value="60">1 min</option>
                        <option value="90">1,5 min</option>
                        <option value="120">2 min</option>
                    </select>
                </div>
            </div>
            <div class="">
                <label for="field_date_start">Start date: </label>
                <input type="date" id="field_date_start" name="date_start" value="" placeholder="dd-mm-jj">
            </div>
            <div class="">
                <label for="field_date_end">End date: </label>
                <input type="date" id="field_date_end" name="date_end" value="" placeholder="dd-mm-jj">
            </div>

            <button class="btn btn-default normal-margin">Submit</button>
            <a href="/admin/posters" class="btn normal-margin">Cancel</a>
        </form>
        <img src="/img/no-poster.jpg" alt="" id="input_preview" />
    </section>


</section>
