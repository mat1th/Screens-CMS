 {{> nav}}
<section class="content scrollable">
    <section class="content-header">
        <h1>Your screens</h1>
        <section class="toolbar">
            <div class="icons">
                <a href="/admin/screens/add" title="add" class="btn-action ">
                    <svg height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                        <path d="M0 0h24v24H0z" fill="none" />
                    </svg>
                </a>
                <button type="button" name="button" title="delete" class="btn-action" disabled>
                    <svg height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" />
                        <path d="M0 0h24v24H0z" fill="none" />
                    </svg>
                </button>
            </div>
            <form class="" action="index.html" method="post">
                <button type="button" name="name" class="btn btn-filter">Name</button>
                <button type="button" name="name" class="btn btn-filter">Date</button>
                <button type="button" name="button" class="btn btn-filter expired">Show expired</button>
            </form>
        </section>
    </section>
    <section class="content-body">
        {{#if data.general}}
            <ul>
                {{#each data.general}}
                    <li class="screen">
                        <a href="/admin/screens/show/{{id}}">
                            <div class="image no-overflow">
                                {{#checktype type equals="vimeo" }}
                                    <img src="{{vimeoImage}}" alt="" />
                                {{/checktype}}
                                {{#checktype type equals="poster" }}
                                    <img src="/download/{{filename}}" alt="" />
                                {{/checktype}}
                            </div>
                            {{#if ../rights.admin}}
                                {{#checktype checked equals="0" }}
                                    <div class="check">
                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 42.8 42.8" xml:space="preserve">
                                            <polygon style="fill:#EB5D56;" points="0,0 42.8,0 42.8,42.8 " />
                                            <path style="fill:#FFFFFF;" d="M37.9,6l-1.4-1.4l-5.6,5.6l-5.6-5.6L23.9,6l5.6,5.6l-5.6,5.6l1.4,1.4l5.6-5.6l5.6,5.6l1.4-1.4l-5.6-5.6L37.9,6z" />
                                        </svg>
                                    </div>
                                {{/checktype}}
                                {{#checktype checked equals="1" }}
                                    <div class="check">
                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 42.8 42.8" style="enable-background:new 0 0 42.8 42.8;" xml:space="preserve">
                                            <polygon style="fill:#009B8F;" points="0,0 42.8,0 42.8,42.8 " />
                                            <path style="fill:#FFFFFF;" d="M27.7,15.5l-4.2-4.2l-1.4,1.4l5.6,5.6l12-12l-1.4-1.4L27.7,15.5z" />
                                        </svg>
                                    </div>
                                {{/checktype}}
                            {{/if}}
                            {{#checktype type equals="vimeo" }}
                                <div class="play-icon-bottom">
                                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewbox="0 0 36.2 36.2">
                                        <circle style="fill: rgba(255, 255, 255, 0.80)" class="st0" cx="18.1" cy="18.1" r="18.1" />
                                        <path style="fill: rgba(0, 0, 0, 0.8)" d="M14.1,11.1v14l11-7L14.1,11.1z" />
                                    </svg>
                                </div>
                            {{/checktype}}

                            <div class="name">
                                <h2>{{name}}
                                  {{#checktype type equals="vimeo" }}<small class="vimeo-tag">Vimeo</small>{{/checktype}}</h2>
                                <small>{{#datefronow data.general.dataCreated}}{{/datefronow}}</small>
                            </div>

                        </a>
                    </li>

                {{/each}}
            </ul>
        {{else}}
            <p>You have got no screens please add one.</p>
            <a href="/admin/screens/add">New screen</a>
        {{/if}}
    </section>
</section>

